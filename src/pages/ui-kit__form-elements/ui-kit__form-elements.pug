extends ../base/base-ui-kit_long-page.pug
include ../../components/text-field/text-field.pug
include ../../components/dropdown-guests/dropdown-guests.pug
include ../../components/date-dropdowns/date-dropdowns.pug
include ../../components/filter-date-dropdown/filter-date-dropdown.pug
include ../../components/toggle/toggle.pug
include ../../components/dropdown-facilities/dropdown-facilities.pug
include ../../components/subscription-text-field/subscription-text-field.pug
include ../../components/checkbox-buttons/checkbox-buttons.pug
include ../../components/radio-buttons/radio-buttons.pug
include ../../components/like-button/like-button.pug
include ../../components/rate-button/rate-button.pug
include ../../components/button_filled/button_filled.pug
include ../../components/button_bordered/button_bordered.pug
include ../../components/button_text-only/button_text-only.pug
include ../../components/button_with-arrow/button_with-arrow.pug

block main
  .form-elements
    .form-elements__row
      .form-elements__column
        .form-element
          span.form-element__state default
          +text-field('email', 'Email', 'text field')
        .form-element
          span.form-element__state hover / focus
          .form-text-field_active
            +text-field('email', 'Email', 'text field')(value='This is pretty awesome')
        .form-element
          +dropdown-guests('dropdown')
        .form-element.form-element_margin-bottom
          +text-field('text', 'ДД.ММ.ГГГГ', 'masked text field').masked-text-field
        .form-element.form-element_margin-bottom
          h3.form-element__name date dropdown
          +date-dropdowns()
        .form-element.form-element_margin-bottom
          +filter-date-dropdown('filter date dropdown')
        .form-element.form-element_margin-bottom
          +subscription-text-field('subscription text field')
      .form-elements__column
        .form-element.form-element_margin-bottom
          - const settings = {'Можно курить': false, 'Можно с питомцами': true, 'Можно пригласить гостей (до 10 человек)': true}
          +checkbox-buttons('Checkbox Buttons', settings)
        .form-element.form-element_margin-bottom
          h3.form-element__name radio buttons
          - const labelNames = ['мужчина', 'женщина']
          +radio-buttons('Radio Buttons', labelNames)(name='sex')
        .form-element.form-element_margin-bottom
          h3.form-element__name toggle
          .form-element__container_column
            +toggle('Получать спецпредложения')(checked)
            +toggle('Получать спецпредложения')
        .form-element.form-element_margin-bottom
          h3.form-element__name like button
          .form-element__container_row
            +like-button(2)
            +like-button(12)(checked)
        .form-element.form-element_margin-bottom
          h3.form-element__name rate button
          .form-element__container_row
            +rate-button(4, 1)
            +rate-button(1, 4)
      .form-elements__column
        .form-element.form-element_margin-bottom
          |ggggggggggggggggggggggggggg
        .form-element.form-element_margin-bottom
          h3.form-element__name buttons
          .form-element__container_row
            +button_filled('click me')
            .button_hovered
              +button_filled('click me')
        .form-element.form-element_margin-bottom
          .form-element__container_row
            +button_bordered('click me')
            .button_hovered
              +button_bordered('click me')    
        .form-element.form-element_margin-bottom
          .form-element__container_row
            +button_text-only('click me')
            .button-text-only_hovered
              +button_text-only('click me')  
        .form-element.form-element_margin-bottom
          .form-element__container_row
            +button_with-arrow('перейти к оплате')                         
    .form-elements__row
      .form-elements__column
        .form-element.form-element_margin-bottom
          +dropdown-facilities('dropdown')
      .form-elements__column
        .form-element.form-element_margin-bottom
          +dropdown-facilities('dropdown')
      .form-elements__column
        .form-element.form-element_margin-bottom
          +dropdown-facilities('dropdown')
    .form-elements__row
      |ggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg
    .form-elements__row
      |ggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg
